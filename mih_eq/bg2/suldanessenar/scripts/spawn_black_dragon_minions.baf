IF
  Allegiance("dragblac", ENEMY)
  !Dead("dragblac")
  Global("mh#SpawnMinions", "MYAREA", 0)
  Difficulty(EASY)
THEN
  RESPONSE #100
    SetGlobal("mh#SpawnMinions", "MYAREA", 1)
    DisplayStringHead("dragblac", @0)
    CreateCreatureObjectEffect("smound01", "spmonsum", "dragblac")
    CreateCreatureObjectEffect("smound01", "spmonsum", "dragblac")
END


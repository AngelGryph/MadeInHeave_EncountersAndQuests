IF
  See(LastAttackerOf(Myself))
  Range(LastSeenBy(Myself), 30)
  !GlobalTimerNotExpired("mh#Ankheg_acid", "LOCALS")
  HPPercentLT(Myself, 50)
THEN
  RESPONSE #40
    SetGlobalTimer("mh#Ankheg_acid", "LOCALS", 1800)
    FaceObject(LastSeenBy(Myself))
    ForceSpell(LastSeenBy(Myself), MH_ANKHEG_ACID_SQUIRT)
    Wait(2)
  RESPONSE #60
    Continue()
END



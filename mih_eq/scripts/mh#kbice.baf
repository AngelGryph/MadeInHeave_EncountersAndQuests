IF
  See(NearestEnemyOf(Myself))
  Range(LastSeenBy(Myself), 30)
  !GlobalTimerNotExpired("mh#KaldranBear_breath", "LOCALS")
THEN
  RESPONSE #80
    SetGlobalTimer("mh#KaldranBear_breath", "LOCALS", THREE_ROUNDS)
    FaceObject(LastSeenBy(Myself))
    ForceSpell(LastSeenBy(Myself), MH_KALDRAN_ICE_BREATH)
    Wait(2)
  RESPONSE #20
    Continue()
END



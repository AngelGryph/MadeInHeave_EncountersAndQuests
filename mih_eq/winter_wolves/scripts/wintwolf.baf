IF
  See(NearestEnemyOf(Myself))
  Range(LastSeenBy(Myself), 10)
  !GlobalTimerNotExpired("winter_wolf_breath", "LOCALS")
THEN
  RESPONSE #40
    SetGlobalTimer("winter_wolf_breath", "LOCALS", TEN_ROUNDS)
    FaceObject(LastSeenBy(Myself))
    ForceSpell(LastSeenBy(Myself), WINTER_WOLF_BREATH)
    Wait(2)
  RESPONSE #60
    Continue()
END



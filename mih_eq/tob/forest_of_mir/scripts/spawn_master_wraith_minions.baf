IF
  Exists("hgwra01")
  Allegiance("hgwra01", ENEMY)
  !Dead("hgwra01")
  !GlobalTimerNotExpired("mh#SpawnTimer", "MYAREA")
  Difficulty(NORMAL)
  InActiveArea(Myself)
  NumCreatureVsPartyLT([Enemy], 10)
THEN
  RESPONSE #10
    SetGlobalTimer("mh#SpawnTimer", "MYAREA", THREE_ROUNDS)
    CreateCreatureObjectEffect("hgmis01", "spfleshs", Player1)

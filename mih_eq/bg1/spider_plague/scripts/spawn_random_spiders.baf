IF
  !GlobalTimerNotExpired("mh#SpawnSpiders", "MYAREA")
  GlobalLT("mh#SpawnedSpider", "MYAREA", %spider_wave_count%)
  Difficulty(EASY)
THEN
  RESPONSE #33
    SetGlobalTimer("mh#SpawnSpiders", "MYAREA", %spider_wave_interval%)
    IncrementGlobal("mh#SpawnedSpider", "MYAREA", 1)
    CreateCreatureOffscreen("spidhu", 0)
    CreateCreatureOffscreen("spidhu", 0)
    CreateCreatureOffscreen("spidhu", 0)
